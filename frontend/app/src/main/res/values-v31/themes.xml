<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PowerCoding.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Background color of the splash screen -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Center icon shown on splash -->
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/power_coding</item>

        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/white
        </item>

        <!-- Remove default android branding -->
        <item name="android:windowSplashScreenBrandingImage" tools:ignore="MissingPrefix">
            @null
        </item>
    </style>
    <style name="Theme.PowerCoding" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryDark">@color/green_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
</resources>