<!-- Zig-zag lesson bubbles in the main screen --><LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bubbleContainer"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <!-- Left spacer for right-aligned bubbles -->
    <Space
        android:id="@+id/leftSpace"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <!-- Bubble+title vertical -->
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/bubbleFrame"
            android:layout_width="64dp"
            android:layout_height="64dp">

            <!-- Ring and triangle background -->
            <ImageView
                android:id="@+id/lessonIconBg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/bubble_background_locked" />

            <!-- Bubble icon -->
            <ImageView
                android:id="@+id/lessonIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_lesson"
                android:scaleType="centerInside"
                android:visibility="visible" />

            <!-- Locker icon -->
            <ImageView
                android:id="@+id/lockIcon"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_lock"
                android:scaleType="center"
                android:alpha="0.5"
                android:visibility="gone" />
        </FrameLayout>

        <!-- Lesson title -->
        <TextView
            android:id="@+id/lessonTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lesson"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Right spacer for left-aligned bubbles -->
    <Space
        android:id="@+id/rightSpace"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />
</LinearLayout>
