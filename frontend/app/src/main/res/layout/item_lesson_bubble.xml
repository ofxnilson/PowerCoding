<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bubbleContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <!-- Left spacer for right-aligned bubbles -->
    <Space
        android:id="@+id/leftSpace"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"/>

    <!-- The bubble itself -->
    <LinearLayout
        android:id="@+id/bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <FrameLayout
            android:layout_width="64dp"
            android:layout_height="64dp">
            <ImageView
                android:id="@+id/lessonIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_lesson"
                android:background="@drawable/bubble_background_active"
                android:scaleType="centerInside"/>
            <ImageView
                android:id="@+id/lockIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_lock"
                android:visibility="gone"/>
        </FrameLayout>

        <TextView
            android:id="@+id/lessonTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lesson"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="6dp"/>
    </LinearLayout>

    <!-- Right spacer for left-aligned bubbles -->
    <Space
        android:id="@+id/rightSpace"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"/>
</LinearLayout>
